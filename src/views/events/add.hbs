<div class="flex justify-center">
  <form action="/events/add" method="POST" class="bg-white shadow-md rounded-md mt-6 px-8 pt-6 pb-8 w-9/12 max-w-md">
    <h1 class="text-center text-gray-700 text-4xl mb-2">Añadir nuevo evento</h1>
    <div class="mb-4">
      <input class="input" name="name" type="text" placeholder="Nombre del evento" />
    </div>
    <div class="mb-4">
      <input class="input" name="description" type="text" placeholder="Descripción" />
    </div>
    <div class="mb-6">
      <input class="input" name="dateStart" type="date" placeholder="Fecha"/>
    </div>
    <div class="mb-6">
      <input class="input" name="hourStart" type="time" placeholder="Hora"/>
    </div>
    <button
      class="btn w-full outline-none bg-blue-500 hover:bg-blue-700 text-white"
      type="submit"
    >
      Guardar
    </button>
  </form>
</div>
