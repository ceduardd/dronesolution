<main class="px-8">
  <h1 class="text-gray-700 font-bold text-4xl my-8">Panel de eventos</h1>
  <button class="mb-4">
    <a class="btn bg-blue-500 text-white" href="events/add">Añadir</a>
  </button>
  <h2 class="text-gray-500 text-xl mb-6">Programados</h2>
  <div class="grid lg:grid-cols-3 gap-10">
    {{#each events}}
    <div class="bg-white rounded shadow-lg p-6">
      <h2 class="text-blue-500 font-bold text-2xl uppercase">{{NAME}}</h2>
      <p>{{DESCRIPTION}}</p>
      <span class="block text-gray-700 mb-2">{{formatDate DATE_START}}</span>
      <button>
        <a class="btn bg-blue-500 text-white" href="/events/edit/{{ID}}">Edit</a>
      </button>
      <button>
        <a class="btn bg-red-500 text-white" href="/events/delete/{{ID}}">Delete</a>
      </button>
    </div>
    {{else}}
    <div class="max-w-sm px3 py-2 bg-green-700 text-white mb-4 m-auto">
      <p>No hay eventos creados aún</p>
      <a href="events/add">Crea Uno!</a>
    </div>
    {{/each}}
  </div>
</main>
