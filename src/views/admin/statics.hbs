{{> nav-admin }}

<div class="wrapper mb-8">

  <section>
    <h1 class="my-4">Usuarios según planes contratados</h1>
    <ul class="grid gap-4 md:grid-cols-3">
      <li>
        <h2 class="text-muted mb-2 italic">Básico</h2>
        <ul class="grid gap-y-4">
        {{#each basic}}
          <li class="card">
            <div class="card-body bg-light">
              <h3>{{ FULLNAME }}</h3>
              <p>
                <i class="fas fa-id-card mr-2"></i>
                {{ DNI }}
              </p>
              <P>
                <i class="fas fa-phone mr-2"></i>
                {{ PHONE }}
              </P>
            </div>
          </li>
        {{else}}
          <div class="alert alert-warning" role="alert">
            No hay datos aquí!
          </div>
        {{/each}}
        </ul>
      </li>
      <li>
        <h2 class="text-muted mb-2 italic">Estándar</h2>
        <ul class="grid gap-y-4">
        {{#each standar}}
          <li class="card">
            <div class="card-body bg-light">
              <h3>{{ FULLNAME }}</h3>
              <p>
                <i class="fas fa-id-card mr-2"></i>
                {{ DNI }}
              </p>
              <P>
                <i class="fas fa-phone mr-2"></i>
                {{ PHONE }}
              </P>
            </div>
          </li>
        {{else}}
          <div class="alert alert-warning" role="alert">
            No hay datos aquí!
          </div>
        {{/each}}
        </ul>
      </li>
      <li>
        <h2 class="text-muted mb-2 italic">Premium</h2>
        <ul class="grid gap-y-4">
        {{#each premium}}
          <li class="card">
            <div class="card-body bg-light">
              <h3>{{ FULLNAME }}</h3>
              <p>
                <i class="fas fa-id-card mr-2"></i>
                {{ DNI }}
              </p>
              <P>
                <i class="fas fa-phone mr-2"></i>
                {{ PHONE }}
              </P>
            </div>
          </li>
        {{else}}
          <div class="alert alert-warning" role="alert">
            No hay datos aquí!
          </div>
        {{/each}}
        </ul>
      </li>
    </ul>
  </section>

  <section>
    <h1 class="my-4">Eventos dados de baja</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Usuario</th>
          <th scope="col">Evento</th>
          <th scope="col">Motivo</th>
        </tr>
      </thead>
      <tbody>
        {{#each unsubscribed}}
        <tr>
          <th scope="row">1</th>
          <td>{{ FULLNAME }}</td>
          <td>{{ NAME }}</td>
          <td>{{ REASON }}</td>
        </tr>
        {{else}}
        <div class="alret alert-warning" role="alert">
          No hay datos aquí!
        </div>
        {{/each}}
      </tbody>
    </table>
  </section>
</div>

